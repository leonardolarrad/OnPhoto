<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.ResultView">

        <TextView
            android:id="@+id/resultTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="15dp"
            android:fontFamily="sans-serif"
            android:text="@string/title_result"
            android:textColor="@color/white_1"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/reverse_search_object"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:divider="@color/background_1" >

        </ListView>

        <Button
            android:id="@+id/btnHome"
            android:layout_gravity="center"
            android:layout_marginVertical="15dp"
            android:layout_width="120dp"
            android:layout_height="67dp"
            android:backgroundTint="@color/foreground_1"
            android:text="@string/button_ok"
            android:textColor="@color/white_1"
            app:icon="@drawable/ic_ok"
            app:iconPadding="0dp"
            app:iconTint="@color/white_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.748" />

</LinearLayout>
